<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="setup.xml"/>

    <bean id="jdbcDataSource" class="com.agileapes.dragonfly.data.JdbcDataSource">
        <constructor-arg value="jdbc:mysql://localhost"/>
    </bean>

    <bean class="com.agileapes.dragonfly.sample.user.UserContext"/>
    <bean class="com.agileapes.dragonfly.sample.assets.DataAccessPreparator"/>

</beans>